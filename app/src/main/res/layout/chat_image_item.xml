<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:background="@drawable/bubby"
        android:id="@+id/side_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|clip_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp">


        <ImageView
            android:id="@+id/image_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">


            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/sync_flag"
                android:padding="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fancy:fb_borderColor="#64ec180e"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="#64ec180e"
                fancy:fb_focusColor="#64ec180e"
                fancy:fb_fontIconSize="4sp"
                fancy:fb_iconPosition="left"
                fancy:fb_text="100%"
                fancy:fb_radius="@dimen/fancy_button_radius"
                fancy:fb_textColor="#fff4f4f5"/>

        </LinearLayout>



    </RelativeLayout>


</RelativeLayout>